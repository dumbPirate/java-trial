package first;

public class Pattern {
	public static void main(String[] args){
		int c = 3;
		int d = 1;
		for(int i = 1;i<7;i++) {
			
			for(int k=0;k<7-i;k++)
			{
				System.out.print(" ");
			}
			
			
			for(int j = 1;j<i;j++) {
				
				System.out.print("*");

			}
			System.out.println("");
		}
	}
}
