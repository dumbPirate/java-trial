package first;

public class Pattern {
	public static void main(String[] args){
		int c = 1;
		for(int i = 1;i<7;i++) {
			for(int j = 1;j<i;j++) {
				for(int k = 4;k>1;k--) {
					System.out.print("$");
					c++;
				}
				System.out.print("*");
				System.out.print(c);
			}
			System.out.println("");
		}
	}
}
