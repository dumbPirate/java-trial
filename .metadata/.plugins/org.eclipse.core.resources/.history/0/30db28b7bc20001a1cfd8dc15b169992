package first;

public class Pattern {
	public static void main(String[] args){
		int c = 4;
		for(int i = 1;i<7;i++) {
			for(int j = 1;j<i;j++) {
				for(int k = c;k>0;k--) {
					System.out.print("$");
//					c++;
				}
				System.out.print("*");
//				System.out.print(c);
				c -= 1;
			}
			System.out.println("");
		}
	}
}
